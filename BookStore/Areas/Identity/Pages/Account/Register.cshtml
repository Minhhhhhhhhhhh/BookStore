@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<link href="~/css/custom-form.css" rel="stylesheet" />

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <section>
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="custom-form">
                    <h2 class="text-center">Create a new account</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <!-- Email input -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <!-- Password input -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <!-- Confirm Password input -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="confirm password" />
                        <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <!-- Submit button -->
                    <div class="text-center">
                        <button id="registerSubmit" type="submit" class="custom-btn btn-lg w-100">Register</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
